@using MicShop.Models
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer



@model ProductViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2> @Localizer["Categories"]</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="categories__slider owl-carousel">

                @foreach (var item in ViewData["Categories"] as IEnumerable<MicShop.Core.Entities.CategoryModel>)
                {

                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="@item.ImageUrl">
                            <h5><a asp-action="GetCategoryProducts" asp-route-id="@item.ID" asp-controller="Category">@item.Name</a></h5>
                        </div>
                    </div>

                }


            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>@Localizer["featured_prodcut"]</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">

            @foreach (var item in Model.Products)
            {

                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@item.ImageUrl">
                            <ul class="featured__item__pic__hover">
                                <li><a class="wishItem" data-id="@item.ID"><i class="fa fa-heart"></i></a></li>
                                <li><a class="remove-item remProduct" data-id="@item.ID"><i class="fa fa-remove"></i></a></li>
                                <li><a class="basketItem" data-id="@item.ID"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-controller="Product" asp-action="OneProductById" asp-route-id="@item.ID">@item.Name</a></h6>
                            <h5>@item.Price Դր</h5>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>