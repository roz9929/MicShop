@model MicShop.Models.LoginViewModel
<div class="col-sm-12 col-md-6">
    <form asp-action="Login" method="post">

        <div class="form-group">
            <div class="row">
                <div class="col-sm-12">
                    <h3>Մուտք</h3>
                </div>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="">Էլ. Փոստի հասցե <span style="color: red">* </span></label>

            <div class="row">
                <div class="col-sm-12">
                    <input asp-for="Email" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="">Գաղտնաբառ <span style="color:red">* </span></label>

            <div class="row">
                <div class="col-sm-12">
                    <input asp-for="Password" type="password" class="form-control">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-5">
                    <button type="submit" class="site-btn">Մուտք</button>
                </div>
            </div>
        </div>

    </form>
</div>