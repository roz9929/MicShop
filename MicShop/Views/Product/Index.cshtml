<!-- Related Product Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Related Product</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in ViewData["Products"] as IEnumerable<MicShop.Core.Entities.ProductModel>)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@item.ImageUrl">
                            <ul class="product__item__pic__hover">
                                <li><a data-id="@item.ID" class="wishItem"><i class="fa fa-heart"></i></a></li>
                                <li><a data-id="@item.ID" class="remove-item remProduct"><i class="fa fa-remove"></i></a></li>
                                <li><a data-id="@item.ID" class="basketItem"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a asp-controller="Product" asp-action="OneProductById" asp-route-id="@item.ID">@item.Name</a></h6>
                            <h5>@item.Price Դր</h5>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
