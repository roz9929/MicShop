@model IEnumerable<MicShop.Core.Entities.ProductModel>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div>

        @foreach (var item in Model)
        {


            <div class="col-md-12">
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <h3 class="text-center"><span class="label label-info">Category: @Html.DisplayFor(modelItem => item.Category.Name)</span></h3>
                        <img src="data:image/png;base64,@Html.DisplayFor(modelItem => item.ImageBase64)" class="img-responsive" alt="" style="height:200px;width:200px" />
                        <div class="caption">
                            <div class="row">
                                <div class="col-md-6 col-xs-6">
                                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                </div>
                                <div class="col-md-6 col-xs-6 price">
                                    <h3>
                                        <label>@Html.DisplayFor(modelItem => item.Price)</label>
                                    </h3>
                                </div>
                            </div>
                            <p> Sku:@Html.DisplayFor(modelItem => item.Sku)</p>
                            <p> Old Price:@Html.DisplayFor(modelItem => item.OldPrice)</p>
                            <form>
                                <button type="submit" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary btn-xs" title="Edit">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </button>
                                <button type="submit" asp-action="Details" asp-route-id="@item.ID" class="btn btn-success btn-xs" title="Details">
                                    <span class="glyphicon glyphicon-info-sign"></span>
                                </button>
                                <button asp-action="Delete" asp-route-id="@item.ID" type="submit" class="btn btn-danger btn-xs" title="Delete">

                                    <span class="glyphicon glyphicon-trash"> </span>
                                </button>
                            </form>

                            <p> </p>
                        </div>
                    </div>
                </div>
            </div>


        }
    </div>
</div>




